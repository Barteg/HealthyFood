<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bartek.foodscanner.DeleteFood">

    <EditText
        android:id="@+id/deleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:hint="Post product Code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/deleteItButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/deleteText"
        android:layout_alignStart="@+id/deleteText"
        android:layout_below="@+id/deleteText"
        android:layout_marginTop="30dp"
        android:text="Delete product" />
</RelativeLayout>
